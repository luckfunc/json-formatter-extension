{
  "name": "JSON Formatter",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Format and explore JSON responses with a customizable theme.",
  "minimum_chrome_version": "88",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_popup": "src/popup/index.html",
    "default_title": "JSON Formatter"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["themes/template.css", "themes/*/*.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": false
  }
}
