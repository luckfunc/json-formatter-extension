{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist",
    "types": ["chrome", "node" ],
    "baseUrl": ".",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@types": ["src/types/index.ts"],
      "@types/*": ["types/*"],
      "@utils": ["src/utils/index.ts"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}
